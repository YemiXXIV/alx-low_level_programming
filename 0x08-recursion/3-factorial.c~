#include "main.h"

/**
 * factorial - A function that returns the factorial 
 * of a given number.
 *@n: Integer
 *
 * Return: -1 if n is lower than 0
 * 1 if n is equal to 0
 * value of n factorial if otherwise
 */

int factorial(int n)
{
	if (n < 0)
	{
		return (-1);
	}

	else if (n == 0)
	{
		return (1);
	}

	else
	{
		return (n * factorial(n - 1));
	}
